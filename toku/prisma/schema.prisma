model ultraman {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  Era String 
  Image String 
  info Info[]

 

}
model Info {
    id  String @id @default(auto()) @map("_id") @db.ObjectId 
    Introduction String
    Story String
    author ultraman @relation(fields: [authorId], references: [id])
    authorId String @db.ObjectId
}






